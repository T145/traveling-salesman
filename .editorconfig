# EditorConfig (is awesome): http://EditorConfig.org

# * top-most EditorConfig file
root = true

# default style settings
[*.py]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{bat,cmd,ps1,[Bb][Aa][Tt],[Cc][Mm][Dd],[Pp][Ss][1]]
# DOS/Win *requires* BAT/CMD/PS1 files to have CRLF newlines
end_of_line = crlf

[*.sh]
# Legacy terminal support
insert_final_newline = true

# TAB-style indentation
indent_style = tab
